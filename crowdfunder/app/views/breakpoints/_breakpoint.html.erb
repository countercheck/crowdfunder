<div class = "breakpoint" id="b_<%= breakpoint.id %>">
  <ul>
    <li><%= breakpoint.title %></li>
    <li><%= breakpoint.description %></li>
    <li><%= breakpoint.estimated_delivery %></li>
    <li>Value: <%= breakpoint.value_in_cents %></li>
    <li>Number available: <%= breakpoint.number_available %></li>

    <% if current_user == true && current_user.breakpoints.include?(breakpoint)%>
      <li>Congratulations, you have backed this project! </li>

    <% else %>

      <%= button_tag 'Contribute here!', {:class => 'contribute-button', data: campaign_breakpoint_contributions_path(breakpoint.campaign, breakpoint)} %>

    <% end %>
  </ul>
</div>
