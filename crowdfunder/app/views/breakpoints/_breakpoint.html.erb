<div class = "breakpoint" id="b_<%= breakpoint.id %>">
  <ul>
    <li><h3>$<%= breakpoint.value_in_cents %></h3></li>
    <li><%= breakpoint.number_available - breakpoint.contributions.count %> left of <%= breakpoint.number_available %></li>
    <li><h6><%= breakpoint.title %></h6></li>
    <li><%= breakpoint.description %></li>
    <li>Number taken: <%= breakpoint.contributions.count %></li>
    <li>Estimated delivery: <%= breakpoint.estimated_delivery %></li>

    <% if current_user && current_user.breakpoints.include?(breakpoint)%>
      <li class="backed">You have pledged this perk!</li>

    <% elsif current_user %>

      <%= button_tag 'Contribute here!', {:class => 'contribute-button', data: campaign_breakpoint_contributions_path(breakpoint.campaign, breakpoint)} %>

    <% else %>
      <p>Log in or sign up to contribute.</p>

    <% end %>
  </ul>
</div>
