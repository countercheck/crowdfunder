<div id="new-comment">
<h3>Add comment</h3>
	<%= form_for([@campaign, @comment], remote: true) do |f| %>

		<div id = "comment-form-errors">
		<% if @comment.errors.any?  %>
				<%= render '/comments/comment_form_errors' %>
		<% end %>
		</div>

		<div class = "field">
			<%= f.label :comment %><br/>
			<%= f.text_area :comment %>
		</div>

		<div class = "actions">
			<%= f.submit %>
		</div>
	<% end %>

</div>
